<resources>
    <!-- Base application theme. -->
    <style name="Theme.Android2021" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlay_light_primary</item>
        <item name="colorPrimaryVariant">@color/overlay_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/overlay_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_green_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_green_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Android2021.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlay_light_primary</item>
        <item name="colorPrimaryVariant">@color/overlay_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/overlay_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_green_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_green_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CollapsingToolbar" >
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="IcMaterial" >
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@string/select_your_color</item>
    </style>
</resources>