<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Android2021" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_100</item>
        <item name="colorOnPrimary">@android:color/system_accent1_0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_100</item>
        <item name="colorOnSecondary">@android:color/system_accent2_0</item>
        <!-- Status bar color. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="android:windowSplashScreenBackground">@android:color/system_accent1_600</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Android2021.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_700</item>
        <item name="colorOnPrimary">@android:color/system_accent1_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_700</item>
        <item name="colorOnSecondary">@android:color/system_accent2_800</item>
        <!-- Status bar color. -->
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="android:windowSplashScreenBackground">@android:color/system_accent1_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>